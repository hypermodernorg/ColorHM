<Window x:Class="ColorHM.Screenshot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorHM"
        mc:Ignorable="d"
        Title="Screenshot" Height="450" Width="800" WindowState="Maximized" Cursor="Cross" ShowInTaskbar="False" WindowStyle="None">
    <Grid>
        <Image x:Name="screenshotImage" Margin="0" MouseLeftButtonDown="ScreenshotImage_MouseLeftButtonDown"/>

    </Grid>
</Window>
