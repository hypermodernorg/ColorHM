<UserControl x:Name="tabitemuc" x:Class="ColorHM.Properties.TabItemUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorHM.Properties"
             mc:Ignorable="d">

    <TabItem x:Name="tih">
        <TabItem.Header>
            <TextBox x:Name="htb"></TextBox>
        </TabItem.Header>
        <Grid Background="#FFE5E5E5">
            <WrapPanel Background="White" ScrollViewer.CanContentScroll="True"/>
        </Grid>
    </TabItem>

</UserControl>
